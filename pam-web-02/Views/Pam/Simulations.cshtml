@model IEnumerable<pam_web_01.Infrastructure.Simulation>
@using Pam.Web.Models
@if (Model.Count() == 0)
{
  <h2>Votre liste de simulations est vide</h2>
}
@if (Model.Count() != 0)
{
  <h2>Liste des simulations</h2>
  <body>
    <table border="1">
      <thead>
        <tr>
          <th>N°</th>
          <th>Nom</th>
          <th>Prenom</th>
          <th>HT</th>
          <th>JT</th>
          <th>SDB</th>
          <th>Indm</th>
          <th>Cotis</th>
          <th>SN</th>
        </tr>

        @for (int i = 0; Model.Count() > i; i++)
        {
          pam_web_01.Infrastructure.Simulation s = Model.ElementAt(i);
          <tr>
            <td>@s.Num</td>
            <td>@s.FeuilleSalaire.Employe.Nom</td>
            <td>@s.FeuilleSalaire.Employe.Prenom</td>
            <td>@s.HeuresTravaillées</td>
            <td>@s.JoursTravaillés</td>
            <td>@s.FeuilleSalaire.ElementsSalaire.SalaireBase</td>
            <td>@s.FeuilleSalaire.ElementsSalaire.CotisationsSociales</td>
            <td>@s.FeuilleSalaire.ElementsSalaire.SalaireNet</td>
            <td> <a href="javascript:retirerSimulation(@s.Num)">retirer</a> </td>

          </tr>

        }
      </thead>

    </table>
  </body>
}